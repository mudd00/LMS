# Railway 환경변수 설정 예시
# Railway Dashboard의 Variables 섹션에 다음 값들을 추가하세요

# ============= Frontend (React) =============
NODE_ENV=production
PORT=3000
REACT_APP_API_URL=https://your-backend-service-name.railway.app
REACT_APP_MAPBOX_TOKEN=pk_your_mapbox_token

# ============= Backend (Spring Boot) =============
# 서버 설정
SERVER_PORT=8080

# 데이터베이스 (Supabase)
# DB_URL=jdbc:postgresql://aws-region.pooler.supabase.com:5432/postgres?sslmode=require&prepareThreshold=0
# DB_USERNAME=postgres.your-project-ref
# DB_PASSWORD=your_supabase_password

# 또는 Railway MySQL 사용
# SPRING_DATASOURCE_URL=jdbc:mysql://mysql-railway:3306/3dcommunity
# SPRING_DATASOURCE_USERNAME=root
# SPRING_DATASOURCE_PASSWORD=your_password
# SPRING_DATASOURCE_DRIVER_CLASS_NAME=com.mysql.cj.jdbc.Driver

# JPA 설정
DB_DDL_AUTO=update
DB_SHOW_SQL=false

# JWT 설정 (⚠️ 프로덕션에서 변경 필수)
JWT_SECRET=your_very_secure_jwt_secret_key_min_32_characters
JWT_EXPIRATION=86400000

# Toss Payments (결제)
TOSS_SECRET_KEY=your_toss_secret_key
TOSS_CLIENT_KEY=your_toss_client_key

# CORS 설정
CORS_ORIGINS=https://your-frontend-service-name.railway.app,https://yourdomain.com

# 로깅
LOG_LEVEL=INFO

# 환경 식별자
ENVIRONMENT=production
